{
  "name": "codeceptjs-bdd-multi-platform",
  "version": "0.1.0",
  "private": "true",
  "description": "CodeceptJS opinionated setup with BDD tests for multiple platforms",
  "keywords": [
    "CodeceptJS",
    "TypeScript",
    "Cucumber",
    "Gherkin",
    "BDD",
    "E2E",
    "Testing",
    "Example",
    "Configuration",
    "Setup",
    "QA",
    "Automation",
    "Web",
    "Mobile",
    "Frontend",
    "Backend",
    "Infrastructure",
    "Playwright",
    "Appium",
    "Docker",
    "CI"
  ],
  "homepage": "https://github.com/MoodyReaper/codeceptjs-bdd-multi-platform#readme",
  "bugs": {
    "url": "https://github.com/MoodyReaper/codeceptjs-bdd-multi-platform/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MoodyReaper/codeceptjs-bdd-multi-platform.git"
  },
  "license": "WTFPL",
  "author": "Moody Reaper",
  "scripts": {
    "codecept:run": "npm run codecept:run:api ; npm run codecept:run:infra ; npm run codecept:run:mobile ; npm run codecept:run:web",
    "codecept:run:api": "dotenv -- codeceptjs run --reporter mocha-multi -c ./src/platforms/api/configs/codecept.api.config.ts",
    "codecept:run:infra": "dotenv -- codeceptjs run --reporter mocha-multi -c ./src/platforms/infra/configs/codecept.infra.config.ts",
    "codecept:run:mobile": "dotenv -- codeceptjs run --reporter mocha-multi -c ./src/platforms/mobile/configs/codecept.mobile.config.ts",
    "codecept:run:web": "dotenv -- codeceptjs run --reporter mocha-multi -c ./src/platforms/web/configs/codecept.web.config.ts",
    "codecept:run:web:admin": "dotenv -- codeceptjs run --reporter mocha-multi -c ./src/platforms/web/configs/codecept.web.config.ts --override '{\"tests\": \"../admin/tests/**/*.spec.ts\", \"gherkin\": {\"features\": \"../admin/bdd/features/*.feature\", \"steps\": \"../admin/bdd/steps/steps.ts\"}}'",
    "codecept:run:web:user": "dotenv -- codeceptjs run --reporter mocha-multi -c ./src/platforms/web/configs/codecept.web.config.ts --override '{\"tests\": \"../user/tests/**/*.spec.ts\", \"gherkin\": {\"features\": \"../user/bdd/features/*.feature\", \"steps\": \"../user/bdd/steps/steps.ts\"}}'",
    "codecept:types": "npm run codecept:types:api && npm run codecept:types:infra && npm run codecept:types:mobile && npm run codecept:types:web",
    "codecept:types:api": "dotenv -- codeceptjs def -c ./src/platforms/api/configs/codecept.api.config.ts -o ./src/platforms/api/configs",
    "codecept:types:infra": "dotenv -- codeceptjs def -c ./src/platforms/infra/configs/codecept.infra.config.ts -o ./src/platforms/infra/configs",
    "codecept:types:mobile": "dotenv -- codeceptjs def -c ./src/platforms/mobile/configs/codecept.mobile.config.ts -o ./src/platforms/mobile/configs",
    "codecept:types:web": "dotenv -- codeceptjs def -c ./src/platforms/web/configs/codecept.web.config.ts -o ./src/platforms/web/configs",
    "codecept:ui:api": "dotenv -- codecept-ui --app -c ./src/platforms/api/configs/codecept.api.config.ts",
    "codecept:ui:infra": "dotenv -- codecept-ui --app -c ./src/platforms/infra/configs/codecept.infra.config.ts",
    "codecept:ui:mobile": "dotenv -- codecept-ui --app -c ./src/platforms/mobile/configs/codecept.mobile.config.ts",
    "codecept:ui:web": "dotenv -- codecept-ui --app -c ./src/platforms/web/configs/codecept.web.config.ts",
    "dist:build": "npm run dist:clean && tsc",
    "dist:check": "tsc --noEmit",
    "dist:clean": "rimraf ./dist",
    "format": "trunk fmt",
    "lint": "trunk check",
    "package:update": "npm-check-updates -u",
    "playground:main": "dotenv -- ts-node ./src/playground/main.ts",
    "playwright:codegen": "playwright codegen",
    "playwright:install-browsers": "playwright install",
    "playwright:install-deps": "playwright install-deps",
    "test": "rimraf ./reports/ && npm run codecept:types && npm run codecept:run",
    "test:api": "rimraf ./reports/api/ && npm run codecept:types:api && npm run codecept:run:api",
    "test:infra": "rimraf ./reports/infra/ && npm run codecept:types:infra && npm run codecept:run:infra",
    "test:mobile": "rimraf ./reports/mobile/ && npm run codecept:types:mobile && npm run codecept:run:mobile",
    "test:web": "rimraf ./reports/web/ && npm run codecept:types:web && npm run codecept:run:web",
    "test:web:admin": "rimraf ./reports/web/ && npm run codecept:types:web && npm run codecept:run:web:admin",
    "test:web:user": "rimraf ./reports/web/ && npm run codecept:types:web && npm run codecept:run:web:user"
  },
  "dependencies": {
    "@codeceptjs/configure": "^0.10.0",
    "@types/node": "^20.10.6",
    "codeceptjs": "^3.5.11",
    "dotenv-cli": "^7.3.0",
    "mocha": "^10.2.0",
    "mocha-multi": "^1.1.7",
    "mochawesome": "^7.1.3",
    "playwright": "^1.40.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webdriverio": "^8.27.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@codeceptjs/ui": "^0.7.0",
    "@trunkio/launcher": "^1.2.7",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "npm-check-updates": "^16.14.12",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": "20.10.0"
  }
}
